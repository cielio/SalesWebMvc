@model IEnumerable<SalesWebMvc.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}
<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn btn-default">Create New</a> 
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(seller => seller.Name)
            </th>
            <th>
                @Html.DisplayNameFor(seller => seller.Email)
            </th>
            <th>
                @Html.DisplayNameFor(seller => seller.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(seller => seller.BaseSalary)
            </th>
            <th>
                @Html.DisplayNameFor(seller => seller.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var seller in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelSeller => seller.Name)
            </td>
            <td>
                @Html.DisplayFor(modelSeller => seller.Email)
            </td>
            <td>
                @Html.DisplayFor(modelSeller => seller.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelSeller => seller.BaseSalary)
            </td>
            <td>
                @Html.DisplayFor(modelSeller => seller.Department)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@seller.Id">Edit</a>
                <a asp-action="Details" asp-route-id="@seller.Id">Details</a>
                <a asp-action="Delete" asp-route-id="@seller.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table> 